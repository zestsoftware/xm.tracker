<html>
  <head><title>Create Tracker Area</title></head>
  <body>
    <h1>Me Grok view PloneSite</h1>

    <form
        tal:attributes="action python:view.context.absolute_url() + '/@@timetracker'"
        method="POST">

      <p>Member id: <span tal:replace="view/member/name" /></p>
      <tal:area condition="view/tracker"> 
        <h2>We have a tracker</h2>
      </tal:area>

      <tal:add-area condition="not:view/tracker"> 
        <h2>We have no tracker area</h2>
      </tal:add-area>
    </form>

  </body>
</html>

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eXtremeManagement">

  <head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border', 1)" />
  </head>
  <body>
    <div metal:fill-slot="main">
      <div metal:define-macro="body">
        
        <div id="timer"
             style="float:right"
             tal:content="python:view.time_spent().strftime('%M:%S')" />

        <h1 class="documentFirstHeading"
            i18n:translate="head_timetracker">Time Tracker</h1>
        
        <form
            method="post"
            action="">
          <input tal:condition="not:view/tracker/time"
                 type="submit"
                 name="start"
                 value="Start working" />

          <input tal:condition="view/tracker/time"
                 type="submit"
                 name="stop"
                 value="Stop and reset" />

          <input type="submit"
                 name="demo"
                 value="Clear tracker and add demo tracked tasks" />

        </form>
        <hr />
        <div id="tracked_tasks">
          <div class="tracked_task"
               tal:repeat="tracked_task view/tracker/tracked_tasks">
            <span tal:content="tracked_task/title" />
            <div class="time_entry"
                 tal:repeat="entry tracked_task/entries">
              <span tal:content="entry/text" />:
              <span tal:content="python:entry.time.strftime('%M:%S')" />
            </div>
            <form
                method="post"
                action="">
              <input type="hidden"
                     name="task_id"
                     tal:attributes="value repeat/tracked_task/number" />
              <input type="text"
                     name="text" />
              <input type="submit"
                     name="track"
                     value="Track" />
              </form>
          </div>
          
        </div>



      </div>
    </div>
  </body>
</html>

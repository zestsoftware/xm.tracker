<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="tracker">
  <head>
    <title i18n:translate="head_timetracker">Time Tracker</title>
    
    <script type="text/javascript" src="jquery.js">
    </script>
    <script type="text/javascript" src="jquery-integration.js">
    </script>
    <script type="text/javascript" src="++resource++base2-dom-fp.js">
    </script>
    <script type="text/javascript" src="++resource++kukit-devel.js">
    </script>
    
    <link rel="stylesheet" type="text/css" href="++resource++tracker.css" />
    
    <link rel="kinetic-stylesheet" type="text/css"
          href="++resource++tracker.kss" />
  </head>
  <body>
  <div tal:define="tracker view/tracker;
                     putils context/plone_utils">  
    <div id="homelink"
         i18n:domain="plone">
      <a tal:attributes="href context/absolute_url"
         i18n:translate="label_home">Home</a>
    </div>
    <div metal:use-macro="here/global_statusmessage/macros/portal_message" />
    <h1 id="timer"
         style="float:right"
         tal:content="view/time_spent" />
    
    <h1 class="documentFirstHeading"
        i18n:translate="head_timetracker">Time Tracker</h1>
    
    <div tal:replace="structure provider:xm.tracker.startstop" />

    <form method="post"
          action="@@tracker_add_tasks">
      <input type="submit"
             name="select"
             id="add-tasks"
             value="Clear tracker and add all xm todo-tasks" />

    </form>
    <form method="post"
          action="@@tracker_select_tasks">
      <input type="submit"
             name="select"
             id="select-tasks"
             value="Clear tracker and select tasks from the xm todo-tasks" />
    </form>
    <div class="tracker-tasks"
         tal:content="structure provider:xm.tracker.tasklist" />
  </div>
  </body>
</html>

<div>
  <h1>Select tasks</h1>

  <form
      method="post"
      action="tracker_add_tasks">

    <tal:loop tal:repeat="project_info view/todo_tasks_per_project">
      <h2 tal:content="project_info/project/Title" />
      <table>
        <tr tal:repeat="task project_info/tasks"
            class="list-in-iteration">
          <td>
            <input
                type="checkbox"
                name="selected_task_uids"
                tal:attributes="value task/UID;
                                checked python:view.tracker().get_task(task['UID']) and 'checked' or ''" />
          </td>
          <td class="td-story-title"
              tal:content="task/title" />
          <td class="td-story-title"
              tal:content="task/story_title" />
        </tr>
      </table>

    </tal:loop>
    <input
        type="submit"
        name="select"
        id="add-tasks"
        value="Update tracker with these tasks" />
  </form>

</div>

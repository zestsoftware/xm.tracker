<div id="startstop"
     i18n:domain="tracker">
  <form tal:condition="not: view/is_started"
        method="post"
        action="@@tracker_start"
        id="start">
    <div>
      <input type="submit"
             name="start"
             id="start-timer"
             value="Start working"
             i18n:attributes="value label_start" />
    </div>
  </form>
  <form tal:condition="view/is_started"
        method="post"
        action="@@tracker_stop"
        id="stop">
    <div>
      <input type="submit"
             name="stop"
             id="stop-timer"
             value="Stop and reset"
             i18n:attributes="value label_stop" />
    </div>
  </form>
</div>
<div class="entry_table"
     tal:define="task nocall:view/task"
     tal:condition="view/entries">


  <div class="time_entry entry_table_row"
       tal:repeat="entry view/entries">
    <div class="entry_table_cell">
      <form method="post"
            action="@@remove_entry">
        <input type="hidden"
               name="uid"
               tal:attributes="value task/uid" />
        <input type="hidden"
               name="entry_number"
               tal:attributes="value repeat/entry/index" />
        <input type="image"
               name="remove"
               src="delete_icon.gif"
               class="remove-entry"
               value="Remove"
               i18n:attributes="value label_remove" />
      </form>
    </div>
    <form method="post"
          action=""
          tal:attributes="class string:edit-entries task-${task/uid}"
          i18n:domain="tracker">
      <div class="entry_table_cell">
        <input type="hidden"
               name="uid"
               tal:attributes="value task/uid" />
        <input type="hidden"
               name="entry_number"
               tal:attributes="value repeat/entry/index" />
        <input type="text"
               name="text"
               class="entry_text_time_edit"
               size="60"
               tal:attributes="value entry/text;
                               title entry/date;" />
      </div>
      <div class="entry_table_cell">
        <input type="text"
               name="time"
               class="entry_text_time_edit"
               size="4"
               tal:attributes="value entry/time" />
      </div>
      <div class="entry_table_cell">
        <tal:book_unassigned_form tal:condition="task/is_unassigned">
          <input type="submit"
                 class="book_to_task_submit"
                 name="book_to_task"
                 value="Book to task"
                 i18n:attributes="value label_book_to_task" />
        </tal:book_unassigned_form>
        <div class="hidden-controls">
          <input type="submit"
                 name="submit"
                 class="edit-entries-button"
                 value="Save"
                 i18n:domain="plone"
                 i18n:attributes="value label_save" />

          <input type="button"
                 name="cancel"
                 value="Cancel"
                 class="edit-entries-cancel"
                 i18n:domain="plone"
                 i18n:attributes="value label_cancel" />
        </div>
      </div>
    </form>
  </div>
</div>
<div class="task"
     tal:define="task context">

  <span tal:content="task/title" />
  &mdash;&nbsp;<span tal:content="view/total_time" />
  <div class="time_entry"
       tal:repeat="entry view/entries">
    <span tal:content="entry/text" />:
    <span tal:content="entry/time" />
  </div>
  <form
      method="post"
      tal:condition="view/tracker_has_started"
      action="@@track_time">
    <input type="hidden"
           name="uid"
           tal:attributes="value task/uid" />
    <input type="text"
           name="text" />
    <input type="submit"
           name="track"
           class="track-time"
           value="Track" />
  </form>
  <tal:book condition="view/entries">
  <form
      method="post"
      action="@@tracker_book">
    <input type="hidden"
           name="uid"
           tal:attributes="value task/uid" />
    <input type="submit"
           name="book"
           class="book-time"
           value="Book" />
  </form>
  <form
      method="post"
      action="@@tracker_book">
    <input type="hidden"
           name="uid"
           tal:attributes="value task/uid" />
    <input type="submit"
           name="book_and_close"
           class="book-time"
           value="Book and close" />
  </form>
  </tal:book>
</div>

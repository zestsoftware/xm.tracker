<div class="task"
     tal:define="task context">

  <hr />
  <h2 style="float:right" tal:content="view/total_time" />
  <h2 tal:content="task/title" />
  <div class="storyline">
    [<span tal:content="task/project|nothing" />
    | <span tal:content="task/story|nothing" />]
  </div>
  <div class="time_entry"
       tal:repeat="entry view/entries">
    <span tal:content="entry/text" />:
    <span tal:content="entry/time" />
  </div>
  <form
      method="post"
      tal:condition="view/tracker_has_started"
      action="@@track_time">
    <input type="hidden"
           name="uid"
           tal:attributes="value task/uid" />
    <input type="text"
           name="text" />
    <input type="submit"
           name="track"
           class="track-time"
           value="Track" />
  </form>
  <tal:book condition="view/entries">
    <form
        method="post"
        action="@@tracker_book">
      <input type="hidden"
             name="uid"
             tal:attributes="value task/uid" />
      <input type="submit"
             name="book"
             class="book-time"
             value="Book" />
      <input type="submit"
             name="book_and_close"
             class="book-time"
             value="Book and close" />
    </form>
  </tal:book>
</div>
